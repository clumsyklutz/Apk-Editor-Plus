<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/manifest_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/manifest_list"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:cacheColorHint="?attr/fade"
        android:layout_weight="1"
        android:requiresFadingEdge="vertical"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ff222222"
            android:gravity="center"
            android:id="@+id/tv_not_support"
            android:background="#ffffffd5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manifest_edit_not_support"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_search_mf"
            android:background="?attr/bottomBar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/mtrl_search_box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="0dp">
                <com.gmail.heagoo.apkeditor.ac.EditTextWithTip
                    android:textSize="12dp"
                    android:textColor="?attr/textMedium"
                    android:id="@+id/mf_keyword"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/pls_input_keyword"
                    android:maxLines="2"
                    android:layout_weight="1"/>
                <RelativeLayout
                    android:id="@+id/btn_search_mf"
                    android:background="@drawable/mtrl_ripple_action"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        android:tint="?attr/iconSecondary"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>


