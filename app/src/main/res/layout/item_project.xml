<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="?attr/card"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/menu_delete"
                android:layout_toRightOf="@+id/app_icon"
                style="@style/MD.Text.Medium"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/app_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/menu_delete"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_below="@+id/app_name"
                style="@style/MD.Text.Small"/>
            <TextView
                android:id="@+id/app_desc2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/menu_delete"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_below="@+id/app_desc1"
                style="@style/MD.Text.Small"/>
            <RelativeLayout
                android:id="@+id/menu_delete"
                android:background="@drawable/mtrl_ripple_action"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    android:tint="#ffbe350b"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


