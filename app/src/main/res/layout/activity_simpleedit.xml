<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/overview_layout"
        android:background="?android:attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:id="@+id/apk_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/apk_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_weight="1"
            style="@style/MD.Toolbar.Title"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="?android:attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/navActivated"
                    android:gravity="center"
                    android:id="@+id/files_label"
                    android:background="@drawable/mtrl_nav_bg_checked"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/files_capital"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/navNormal"
                    android:gravity="center"
                    android:id="@+id/images_label"
                    android:background="@drawable/mtrl_nav_bg_unchecked"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/images_capital"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="?attr/navNormal"
                    android:gravity="center"
                    android:id="@+id/audio_label"
                    android:background="@drawable/mtrl_nav_bg_unchecked"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/audios_captical"
                    android:layout_weight="1"
                    android:fontFamily="@font/google_sans_medium"/>
            </LinearLayout>
            <androidx.viewpager.widget.ViewPager
                android:layout_gravity="center"
                android:id="@+id/pagerView"
                android:persistentDrawingCache="animation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:flipInterval="30"
                android:layout_weight="1"/>
        </LinearLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/progressHorizontal"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/bottom_layout"
        android:background="?attr/bottomBar"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12dp"
            android:textColor="?attr/textSmall"
            android:ellipsize="start"
            android:id="@+id/tv_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            style="@style/MD.Button.Google.Outline"/>
    </LinearLayout>
</LinearLayout>


