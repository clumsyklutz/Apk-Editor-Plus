<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="?attr/windowTitle"
        android:gravity="center_vertical"
        android:id="@+id/title"
        android:background="?android:attr/colorPrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:text=""
        android:maxLines="2"
        android:singleLine="false"
        style="@style/MD.Dialog.Title"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ExpandableListView
            android:id="@+id/lv_matchedfiles"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="?attr/fade"
            android:groupIndicator="@null"
            android:requiresFadingEdge="vertical"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/searching_layout"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="14dp"
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searching"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:indeterminate="true"
                android:indeterminateTint="?attr/progressHorizontal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/bottom_layout"
        android:background="?attr/bottomBar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mtrl_search_box"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp">
            <com.gmail.heagoo.apkeditor.ac.EditTextWithTip
                android:textSize="12dp"
                android:textColor="?attr/textMedium"
                android:id="@+id/et_replaceall"
                android:background="@null"
                android:paddingLeft="16dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/pls_input_keyword"
                android:maxLines="2"
                android:layout_weight="1"/>
            <RelativeLayout
                android:id="@+id/btn_replaceall"
                android:background="@drawable/mtrl_ripple_action"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_res_replace"
                    android:tint="?attr/iconSecondary"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


