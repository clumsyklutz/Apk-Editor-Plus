<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/overview_layout"
        android:background="?android:attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/apk_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20sp"
                android:ellipsize="end"
                android:id="@+id/apk_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_results"
                android:singleLine="true"
                style="@style/MD.Toolbar.Title"/>
            <TextView
                android:textSize="10dp"
                android:textColor="?attr/textSmall"
                android:id="@+id/tv_filepath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/path_info"
                android:layout_below="@+id/apk_label"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:textSize="10dp"
                android:textColor="?attr/textSmall"
                android:ellipsize="start"
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_filepath"
                android:layout_below="@+id/apk_label"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/files_list"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="?attr/fade"
            android:requiresFadingEdge="vertical"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/commonutil_progressbar"
            style="?android:attr/progressBarStyleLarge"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom_layout"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:layout_weight="1"
            style="@style/MD.Button.Google.Outline"/>
        <Button
            android:id="@+id/btn_save"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_weight="1"
            style="@style/MD.Button.Google"/>
    </LinearLayout>
</LinearLayout>


