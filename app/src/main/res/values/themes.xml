        <item name="card5">@color/card_red_light</item>
        <item name="card6">@color/card_blue_light</item>
        <item name="card7">@color/card_green_light</item>
        <item name="card8">@color/card_red_light</item>
        <item name="card9">@color/card_blue_light</item>
        <item name="card10">@color/card_green_light</item>

        <!-- Navigation attributes -->
        <item name="navActivated">?android:attr/colorAccent</item>
        <item name="navNormal">?android:attr/textColorSecondary</item>
    </style>

    <style name="Theme.ApkEditorPlus" parent="Base.Theme.ApkEditorPlus" />
