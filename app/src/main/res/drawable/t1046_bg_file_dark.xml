<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false">
        <shape>
            <gradient
                android:startColor="#ff111111"
                android:endColor="#ff333333"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#ff808080"/>
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ff773300"
                android:endColor="#ffff9933"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#ff808080"/>
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
</selector>
