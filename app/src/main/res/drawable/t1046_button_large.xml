<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ffff4000"
                        android:endColor="#ffff8000"
                        android:angle="90"/>
                    <corners android:radius="30dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#ffffffff"/>
                </shape>
            </item>
            <item
                android:left="17dp"
                android:top="3dp"
                android:right="17dp"
                android:bottom="30dp">
                <shape>
                    <gradient
                        android:startColor="#08ffffff"
                        android:endColor="#a0ffffff"
                        android:angle="90"/>
                    <corners
                        android:topLeftRadius="15dp"
                        android:topRightRadius="15dp"
                        android:bottomLeftRadius="15dp"
                        android:bottomRightRadius="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ff000000"
                        android:endColor="#ff202020"
                        android:angle="90"/>
                    <corners android:radius="30dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#20ffffff"/>
                </shape>
            </item>
            <item
                android:left="17dp"
                android:top="3dp"
                android:right="17dp"
                android:bottom="30dp">
                <shape>
                    <gradient
                        android:startColor="#08ffffff"
                        android:endColor="#a0ffffff"
                        android:angle="90"/>
                    <corners
                        android:topLeftRadius="15dp"
                        android:topRightRadius="15dp"
                        android:bottomLeftRadius="15dp"
                        android:bottomRightRadius="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
