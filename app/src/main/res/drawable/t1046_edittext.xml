<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ffff4000"
                        android:endColor="#ffff8000"
                        android:angle="90"/>
                    <corners android:radius="@dimen/button_radius"/>
                    <stroke
                        android:width="1dp"
                        android:color="#ffffffff"/>
                </shape>
            </item>
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="20dp">
                <shape>
                    <gradient
                        android:startColor="#08ffffff"
                        android:endColor="#30ffffff"
                        android:angle="90"/>
                    <corners
                        android:topLeftRadius="3dp"
                        android:topRightRadius="3dp"
                        android:bottomLeftRadius="15dp"
                        android:bottomRightRadius="15dp"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp">
                <shape>
                    <gradient
                        android:startColor="#ffffffff"
                        android:endColor="#ffa0a0a0"
                        android:angle="90"
                        android:centerColor="#ffffffff"/>
                    <corners android:radius="2dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#ffffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ff000000"
                        android:endColor="#ff202020"
                        android:angle="90"/>
                    <corners android:radius="@dimen/button_radius"/>
                    <stroke
                        android:width="1dp"
                        android:color="#40ffffff"/>
                </shape>
            </item>
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="20dp">
                <shape>
                    <gradient
                        android:startColor="#08ffffff"
                        android:endColor="#30ffffff"
                        android:angle="90"/>
                    <corners
                        android:topLeftRadius="3dp"
                        android:topRightRadius="3dp"
                        android:bottomLeftRadius="15dp"
                        android:bottomRightRadius="15dp"/>
                </shape>
            </item>
            <item
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp">
                <shape>
                    <gradient
                        android:startColor="#ffffffff"
                        android:endColor="#ffa0a0a0"
                        android:angle="90"
                        android:centerColor="#ffffffff"/>
                    <corners android:radius="2dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#ffffffff"/>
                    <padding
                        android:left="8dp"
                        android:top="8dp"
                        android:right="8dp"
                        android:bottom="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
