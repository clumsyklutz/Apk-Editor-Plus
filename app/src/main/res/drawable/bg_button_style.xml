<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ffffffff"
                android:endColor="#ffffffff"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#ffd2d7ea"/>
            <corners android:radius="11dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffffffff"
                android:endColor="#ffffffff"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#ffd2d7ea"/>
            <corners android:radius="11dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#80ebeef3"
                android:endColor="#80ebeef3"
                android:angle="180"/>
            <stroke
                android:width="1dp"
                android:color="#ffd2d7ea"/>
            <corners android:radius="11dp"/>
        </shape>
    </item>
</selector>
