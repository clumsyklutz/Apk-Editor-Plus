            android:exported="false"
            android:authorities="com.gmail.heagoo.apkeditor.pro.fileprovider"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths"/>
        </provider>
        <activity android:name="com.gmail.heagoo.appdm.PrefOverallActivity"/>
        <activity android:name="com.gmail.heagoo.appdm.PrefDetailActivity"/>
        <activity android:name="com.gmail.heagoo.neweditor.EditorActivity"/>
        <activity android:name="com.gmail.heagoo.sqliteutil.SqliteTableListActivity"/>
        <activity android:name="com.gmail.heagoo.sqliteutil.SqliteTableViewActivity"/>
        <activity android:name="com.gmail.heagoo.sqliteutil.SqliteRowViewActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.SelectDbActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.VerifyActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.SelectFileActivity"/>
    </application>
</manifest>
