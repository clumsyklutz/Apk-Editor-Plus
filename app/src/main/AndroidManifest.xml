            android:name="com.gmail.heagoo.apkeditor.MfSearchRetActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.gmail.heagoo.apkeditor.ApkSearchActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.ColorXmlActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.prj.ProjectListActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.AxmlEditActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.OdexPatchActivity"/>
        <activity android:name="com.gmail.heagoo.pngeditor.PngEditActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.InfoActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.AboutModActivity"/>
        <activity android:name="com.gmail.heagoo.apkeditor.TemplatesActivity"/>
        <service android:name="com.gmail.heagoo.apkeditor.ApkComposeService"/>
